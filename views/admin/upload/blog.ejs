<!DOCTYPE html>
<html>
<head>
    <title>Upload Photo</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <script src="/assets/js/ckeditor/ckeditor.js"></script>
</head>

<body>
<div id="wrapper" class="divided">

    <section class="wrapper style1 align-center">
        <div class="inner">
            <h1>Edit Blog</h1>
            <form method="post" action="/admin/blog" id="post-blog">
                <% if (id >= 0) {%>
                <div class="field first">
                    <input type="text" class="form-control" name="title" id="title" value="<%= title %>">
                </div>
                <input type="hidden" name="id" value="<%= id %>">
                <% }  else { %>
                <div class="field first">
                    <input type="text" class="form-control" name="title" id="title" placeholder="Title">
                </div>
                <% } %>
                <div class="field first">
                    <textarea class="form-control" name="content" id="content" rows="20" cols="80">
                        <% if (id >= 0) {%>
                            <%= content %>
                        <% } %>
                    </textarea>
                </div>
                <script>
                    CKEDITOR.replace('content');
                </script>
                <ul class="actions">
                    <li><button type="submit" class="button special">Save</button></li>
                    <li><a href="/admin" class="button">Cancel</a></li>
                </ul>
            </form>
        </div>
    </section>
</div>
<script type="text/javascript">
    function save_post() {
        var data = CKEDITOR.instances.editor1.getData();
        console.log(data);
    }
</script>
</body>
</html>


